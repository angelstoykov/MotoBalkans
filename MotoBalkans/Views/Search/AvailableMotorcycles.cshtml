@model IEnumerable<AvailableMotorcyclesViewModel>;
@{
    ViewBag.Title = "All available motorcycles";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var e in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h4 class="card-title mt-1">@e.Brand</h4>
                <h5 class="card-title mt-1">@e.Model</h5>
                <h5 class="card-title mt-1">@e.PricePerDay EUR/day</h5>
            </div>

            <a asp-controller="Motorcycle" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Details</a>
            <form asp-controller="Booking" asp-action="Book" asp-route-id="@e.Id">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold"  type="submit" value="Book Now" />
            </form>
