@model IEnumerable<AvailableMotorcyclesViewModel>;
@{
    ViewBag.Title = "All available motorcycles";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />
@if (Model.Count() > 0)
{
    <div class="text-center row">
        @foreach (var item in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">
                    @await Html.PartialAsync("_MotorcycleFormPartial", item)
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Sorry, No available motorcycles for this period.</p>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
