@model DeleteMyBookingViewModel
@{
    ViewBag.Title = "Delete Booking";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="text-danger mt-3">"Are you sure you want to delete this booking?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
