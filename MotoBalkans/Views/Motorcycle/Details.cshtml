@using MotoBalkans.Data.Enums
@model MotorcycleDetailsViewModel
@{
    ViewBag.Title = "Motorcycle Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card col-4" style="width: 20rem; ">
        <div class="card-body">
            <img src="@Model.PictureUrl" />
            <h3 class="card-title text-center">@Model.Brand</h3>
            <h3 class="card-title text-center">@Model.Model</h3>
            <h3 class="card-title text-center">@Model.EngineType</h3>
            <h3 class="card-title text-center">@Model.PricePerDay</h3>

        </div>

        <a asp-controller="Motorcycle" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Motocycles</a>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
